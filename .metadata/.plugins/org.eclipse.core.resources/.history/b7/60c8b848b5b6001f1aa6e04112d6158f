package com.namingConvention.services;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

public class AdjacentCountries {
	public List<String> getAdjacentCountries(String countryCode) {
		Map<String, List<String>> countryCodeToAdjacentCountries = new HashMap<>();
		countryCodeToAdjacentCountries.put("IN", Arrays.asList("China","Pakistan","Nepal", "Bhutan", "Myanmar", "Afghanistan", "Sri Lanka"));
		countryCodeToAdjacentCountries.put("FR", Arrays.asList("Belgium", "Luxembour", "Spain", "Italy", "Germany", "Monaco", "Brazil", "Andorra", "Suriname"));
		countryCodeToAdjacentCountries.put("US", Arrays.asList("Canada", "Mexico"));
		countryCodeToAdjacentCountries.put("NZ", Arrays.asList("Australia"));
		countryCodeToAdjacentCountries.put("GB", Arrays.asList("Ireland", "France", "Netherlands"));
		return new ArrayList<String>();
    }
}
